<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/evstill"
    android:layout_height="match_parent"
    tools:context="sahil.iiitk_foundationday_app.views.Login_Screen">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp" />

    <Button
        android:id="@+id/phonebutton"
        android:layout_width="300dp"
        android:textSize="16sp"
        android:textColor="#dddddd"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/sign_in_button"
        android:layout_marginBottom="11dp"
        android:background="@color/btn"
        android:text="Continue with Phone Number"
        android:textStyle="bold" />


    <Button
        android:textColor="#dddddd"
        android:textSize="16sp"
        android:id="@+id/button4"
        android:background="@color/btn"
        android:layout_width="300dp"
        android:textStyle="bold"

        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/phonebutton"
        android:layout_marginBottom="24dp"
        android:text="LOG IN WITH FF ID" />

    <Button
        android:id="@+id/button5"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="37dp"
        android:background="#000000"
        android:visibility="invisible"
        android:text="Register Later"
        android:fontFamily="serif"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:textSize="17sp" />

    <TextView
        android:fontFamily="serif"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/button6"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        android:text="Register Later" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>
