<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#e0e0e0"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/notif_club_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Technical Club"/>
            <TextView
                android:id="@+id/notif_time"
                android:layout_below="@+id/notif_club_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="left"
                android:text="10:35 AM"/>
            <TextView
                android:id="@+id/notif_info"
                android:layout_below="@+id/notif_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="#000000"
                android:text="Everyone be present at Prabha Bhawan tomorrow evening on the opening ceremony."/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>