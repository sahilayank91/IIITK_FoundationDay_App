<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/notif_header_card"
        app:cardBackgroundColor="#607D8B"
        android:layout_height="50dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/notif_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="What's Going on!"
        android:textSize="25sp"
        android:textColor="#000000"
        />
    <View
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/notif_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#37474F"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>
<Button
    android:layout_below="@id/notif_header_card"
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:onClick="postNotification"
    android:text="Send"/>

    <Button
        android:layout_below="@id/notif_header_card"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:onClick="getNotification"
        android:text="GET"/>

</RelativeLayout>
